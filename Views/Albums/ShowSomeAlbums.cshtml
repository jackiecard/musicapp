@model IEnumerable<Music.Models.Album>

@{
    ViewBag.Title = "ShowSomeAlbums";
}

<h2>ShowSomeAlbums</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Artist.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Artist.Name, "Details", new { id = item.AlbumID })
        </td>
        <td>
            @Html.ActionLink(item.Genre.Name, "Details", new { id = item.AlbumID })
        </td>
        <td>
            @Html.ActionLink(item.Title, "Details", new { id = item.AlbumID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
        </td>
    </tr>
}

</table>
